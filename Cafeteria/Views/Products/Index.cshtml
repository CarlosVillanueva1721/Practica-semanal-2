@model IEnumerable<Cafeteria.Models.Products>

@{
    ViewBag.Title = "Index";
}

    <div class="container" style="margin-top:30px; align:center">
        <div class="row">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col-lg-3">

                    <h1 class="my-4 masthead-heading text-uppercase">Menu</h1>
                    <div class="list-group">
                        <p class="list-group-item">
                            @Html.ActionLink("Nuevo Producto", "Create")
                        </p>
                    </div>
                </div>
            }
            else
            {
                <h1 class="my-4 masthead-heading text-uppercase">Menu</h1>
            }

            <div class="col-lg-9">
                <div class="row justify-content-center">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 mb-4">
                            <div class="card h-100">
                                <div>
                                    <a href="#"><img class="card-img-top" style="width:100%; height:170px;" src="@Url.Action("getimagen", "Products", new{ id=item.Id})" alt="aqui debe ir una imagen chida"></a>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="#">@item.productname</a>
                                    </h4>
                                    <h3>@item.kindpruduct</h3>
                                    <h5>@item.price</h5>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@item.size    </small>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <td>
                                            <a href="@Url.Action("Edit", "Products", new { id = item.Id })" class="btn btn-warning btn-circle"> <i class="fas fa-edit"></i></a>
                                            <a href="@Url.Action("Details", "Products", new { id = item.Id })" class="btn btn-info btn-circle"> <i class="fas fa-info-circle"></i></a>
                                            <a href="@Url.Action("Delete", "Products", new { id = item.Id })" class="btn btn-danger btn-circle"> <i class="fas fa-trash"></i></a>
                                        </td>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Create", "orders",new{ id = item.Id } )" class="btn btn-success "> <i>Ordenar</i></a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
